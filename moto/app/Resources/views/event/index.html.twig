{% extends 'base.html.twig' %}

{% block body %}
    <h1>Upcoming Events list</h1>

    <table class="table table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Date</th>
                <th>Location</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td><a href="{{ path('event_show', { 'id': event.id }) }}">{{ event.name }}</a></td>
                <td>{{ event.description }}</td>
                <td>{% if event.eventDate %}{{ event.eventDate|date('d/m/Y') }} at {{ event.eventDate|date('H:i:s') }}{% endif %}</td>
                <td>{{ event.location }}</td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-default">Action</button>
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>

                        <ul class="dropdown-menu" role="menu">
                            <li><a href="{{ path('event_show', { 'id': event.id }) }}">Show</a></li>
                            <li class="divider"></li>
                            <li><a href="{{ path('event_edit', { 'id': event.id }) }}">Edit</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-app" href="{{ path('event_new') }}">
        <i class="fa fa-calendar"></i> New event
    </a>
{% endblock %}
