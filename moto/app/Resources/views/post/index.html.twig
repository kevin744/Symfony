{% extends 'base.html.twig' %}
{% block title %}My posts{% endblock %}
{% block page_title %}My posts{% endblock %}
{% block body %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Createdat</th>
                <th style="width: 140px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('api_posts_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>{% if post.createdAt %}{{ post.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-default">Action</button>
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="{{ path('api_posts_show', { 'id': post.id }) }}">Show</a></li>
                            <li class="divider"></li>
                            <li><a href="{{ path('api_posts_edit', { 'id': post.id }) }}">Edit</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div>
        <a href="{{ path('api_posts_new') }}" class="btn btn-app">
            <i class="fa fa-edit"></i> New post
        </a>
    </div>

{% endblock %}
